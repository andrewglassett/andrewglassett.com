#about
  col()
  padding-bottom: 2em
  background: white
  center(1000px)
  +below(800px)
    padding: 1em
    margin-top: 0em
  .chunk-ex
    center(800px)
    .text
      padding-bottom: 1em
  .chunk
    col()
    margin: 8em 0 2em 0
    +below(800px)
      padding: 0
      margin:  0
    center()
    // &:first-child
    //   border-bottom 5px solid lightgray
    .pic
      col(2/5)
      +below(800px)
        col()
      img
        border-radius: 50%
        +below(800px)
          max-height: 300px
          margin-left: auto
          margin-right: auto
    .text
      col(3/5)
      ul
        margin: 0
        padding: 0
        li
          display: inline-block
          padding-right: 1em

      +below(800px)
        col()
    .title
      col()
      margin-top: 4em
      h3
        center(1300px)
        line-height: 3
        font-size: 1em
        font-style: italic
        letter-spacing: 4px
        border-bottom: 2px solid graybrand
