#about
  col()
  padding: 2em
  background: white
  +below(800px)
    padding: 1em
    margin-top: 0em
  .experience
    col(1/3)

  .chunk-ex
    col()
    .text
      padding-bottom: 1em
  .chunk
    col()
    margin: 2em 0
    +below(800px)
      padding: 0
      margin:  0
    .pic
      col(1/8)
      +below(800px)
        col()
      img
        border-radius: 50%
        +below(800px)
          max-height: 300px
          margin-left: auto
          margin-right: auto
    .text
      col(7/8)
      ul
        margin: 0
        padding: 0
        li
          display: inline-block
          padding-right: 1em

      +below(800px)
        col()
    .title
      col()
      margin-top: 4em
      h3
        line-height: 3
        font-size: 1em
        font-style: italic
        letter-spacing: 4px
        border-bottom: 2px solid graybrand
