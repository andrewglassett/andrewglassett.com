#home
  col()
  #nav
    position: fixed;
    top: 0;
    left: 0;
    z-index: 0;
    height: 100%;
    width: 200px;
    background-color: #fff;
    border-right: 1px solid #EEE;
    transform: translateX(-100%);
    transition: 1s transform cubic-bezier(0.86, 0, 0.07, 1);
    display: block;
    transform: translateX(0%);
    transition: none;
    z-index: 9999;
    +below(1100px)
      position relative
      width: 100%
      height: 100px
    .nav
      position: absolute;
      left: 50%;
      top: 50%;
      transform: translateX(-50%) translateY(-50%);
      +below(1100px)
        position relative
      ul li
        text-align: center
        padding: 2em 0
        +below(1100px)
          display inline
          margin-right: 1em
          padding: 1em
      img
        border: none
        +below(1100px)
          display none
  #body
    width: calc(100% - 200px);
    transform: translateX(200px);
    position: relative;
    background: #fff;
    +below(1100px)
      position relative
      width: 100%
      transform: translateX(0px);
    header
      background: url('../img/about/hero.jpg') no-repeat top center fixed
      background-size: cover
      margin: 0
      padding: 0
      height: 700px
      +below(1200px)
        height: 500px
      width: 100%
      h1
        margin: 0
        padding: 1em
        color: white
        position: absolute

    #services
      center(1200px)
      padding: 2em
      .value
        col()
        border:4px solid lightbrand
        padding: 1em
        margin-bottom: 1em
        .number
          col(1/8)
          // background: graybrand
          // text-align center
          // width: 100px
          // height 100px
          border-radius 50%
          font-size: 2em
          color graybrand
          padding: 0 1em
          line-height: 0
          +below(1100px)
            col()
            border-radius 0%
            text-align center
        .prop
          col(7/8)
          +below(1100px)
            col()
          h2
            font-size: 2.5em
