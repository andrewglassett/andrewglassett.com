#home
  col()
  background: white
  padding: 0 2em
  +below(mobile)
    padding: 0 1em
  // h1.txtwav.slow.big
  //   +below(mobile)
  //     display:none
  // h2.txt.wav.slow.big
  //   +below(mobile)
  //     display: none

  .header
    col()
    h1
      font-size: 5.5em
      margin: 0
      padding: .5em 0
      +below(mobile)
        font-size: 3em
        text-align: center;
    h2
      font-size: 5.5em
      margin: 0
      padding: 1em 0 .5em 0
      +below(1363px)
        font-size: 4em
      +below(mobile)
        font-size: 3em
        text-align: center;
    h1.txtwav, h2.txtwav
      +below(mobile)
        display: none
    h1.mobile, h2.mobile, h3.mobile
      text-align:center;
      +above(mobile)
        display none
  .companies
    col()
    +below(mobile)
      display: none
    a.company
      col(1/5)
      background graybrand
      border-bottom: 2px solid graybrand
      &:hover
        background graybrand2
      +below(mobile)
        col()
        background: graybrand
        margin: 0
        margin-bottom: 2em
        text-align: center
      img
        border: none


  .problems
    width: 100%
    display: flex;
    flex-wrap: wrap;
    align-content: stretch;
    height: 100%;

    a.problem
      width: 47%
      background: graybrand
      color: darkbrand
      text-align: center;
      padding: 2em
      margin: 1.5%
      border-radius: 5px
      border-bottom: 2px solid graybrand
        &:hover
          background: graybrand2

        +below(mobile)
          width: 100%
          background: graybrand
          margin-bottom: 5%
      img
        col()
        padding: 5% 25%
        border: none;

      p
        margin-bottom: 0

      span
        -webkit-transform: rotate(-90deg);
        -moz-transform: rotate(-90deg);
        -ms-transform: rotate(-90deg);
        -o-transform: rotate(-90deg);
        background: darkbrand
        color: graybrand2
        padding: 4px
        // filter: progid:DXImageTransform.Microsoft.BasicImage(rotation=3);

.about
  col()
  padding: 2em
  margin: 1% 0
  background: graybrand2
  .img
    col(1/2)
    +below(mobile)
      col()
  .description
    col(1/2)
    padding: 8%
    +below(mobile)
      col()
    ul
      margin: 0
      padding: 0
      li
        display: inline-block
        padding-right: 1em
