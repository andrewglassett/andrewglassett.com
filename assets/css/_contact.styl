#contact
  background: lightbrand
  width: calc(100% - 200px);
  transform: translateX(200px);
  col()
  .contact
    center(1200px)
    .form
      col(1/2)
      label
        color: graybrand
        text-transform uppercase
        font-weight 900
      form
        margin auto
        position relative

      input
        width 100%
        display block
        height 50px
        margin-bottom: 1em
        padding-left: .5em
        background lightbrand
        color white
        border 4px solid white
      .button
        display block
        margin 2em 0
        background hoverbrand
        text-transform uppercase
        font-weight 900
        border none
        &:hover
          background lightbrand
          color white

    .digits
      col(1/2)
      margin-top: 2em
      margin-bottom: 2em
      padding: 2em
      color: white
